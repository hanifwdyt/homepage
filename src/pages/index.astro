---
const apps = [
  {
    name: "miniboard",
    url: "https://task.hanif.app",
    icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2",
    description:
      "A minimal kanban board I built because every task manager out there has too many features. This one just has columns and cards — that's it.",
  },
  {
    name: "netflix-forwarder",
    url: "https://ijin-masuk-netflix.hanif.app",
    icon: "M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z",
    description:
      "Forwards Netflix household confirmation emails so my family can verify without bugging me. Set it up once, never think about it again.",
  },
  {
    name: "pomodo",
    url: "https://pomodo.hanif.app",
    icon: "M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z",
    description:
      "A pomodoro timer + to-do list combo. Simple focus tool — set a timer, check off tasks, repeat.",
  },
  {
    name: "bagirata",
    url: "https://bagirata.hanif.app",
    icon: "M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5l-3-3m0 0l-3 3m3-3v12",
    description:
      "Split bills fairly with friends. No sign-up, no fuss — just enter what everyone paid and who owes whom.",
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>hanif.app</title>
    <meta
      name="description"
      content="Things I build and run on the internet."
    />
  </head>
  <body class="bg-neutral-950 text-neutral-100 min-h-screen">
    <main class="max-w-2xl mx-auto px-6 py-20">
      <!-- Hero -->
      <section class="mb-16">
        <h1 class="text-4xl font-bold tracking-tight mb-3">hanif.app</h1>
        <p class="text-neutral-400 text-lg">
          Small tools I build to solve my own problems.
        </p>
      </section>

      <!-- Apps -->
      <section>
        <h2 class="text-sm font-medium text-neutral-500 uppercase tracking-widest mb-6">
          Apps
        </h2>
        <div class="space-y-4">
          {apps.map((app) => (
            <a
              href={app.url}
              target="_blank"
              rel="noopener noreferrer"
              class="block group border border-neutral-800 rounded-xl p-5 hover:border-neutral-600 transition-colors"
            >
              <div class="flex items-start gap-4">
                <div class="mt-0.5 p-2 rounded-lg bg-neutral-900 text-neutral-400 group-hover:text-neutral-200 transition-colors">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="1.5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d={app.icon}
                    />
                  </svg>
                </div>
                <div>
                  <h3 class="font-semibold text-neutral-100 group-hover:text-white transition-colors">
                    {app.name}
                  </h3>
                  <p class="text-sm text-neutral-400 mt-1 leading-relaxed">
                    {app.description}
                  </p>
                </div>
              </div>
            </a>
          ))}
        </div>
      </section>

      <!-- Footer -->
      <footer class="mt-20 pt-8 border-t border-neutral-800">
        <p class="text-sm text-neutral-600">
          Built by Hanif &middot; Powered by
          <a
            href="https://coolify.hanif.app"
            class="text-neutral-500 hover:text-neutral-300 transition-colors"
            >Coolify</a
          >
        </p>
      </footer>
    </main>
  </body>
</html>
